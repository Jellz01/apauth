listen {
    type = auth
    ipaddr = *
    port = 1812
}

listen {
    type = acct
    ipaddr = *
    port = 1813
}

server default {

    authorize {
        sql

        
        if ("%{sql:SELECT enabled FROM clients WHERE mac = '%{Calling-Station-Id}'}" == "1") {
            update control {
                Auth-Type := Accept
            }
            ok
        }
        else {
            
            reject
        }
    }

    authenticate {
        Auth-Type Accept {
            ok
        }
    }
}
