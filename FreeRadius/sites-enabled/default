listen {
    type = auth
    ipaddr = *
    port = 1812
}

listen {
    type = acct
    ipaddr = *
    port = 1813
}

server default {

    authorize {
        #
        # Check SQL for known MACs
        #
        sql

        if ("%{sql:SELECT enabled FROM clients WHERE mac = '%{Calling-Station-Id}'}" == "1") {
            update control {
                Auth-Type := Accept
            }
            ok
        }
        else {
            #
            # If MAC not found in DB, reject (this triggers captive portal redirect)
            #
            if ("%{sql:SELECT COUNT(*) FROM clients WHERE mac = '%{Calling-Station-Id}'}" == "0") {
                update control {
                    Tmp-String-0 := "%{Calling-Station-Id}"
                }
                # Optional: call an exec script to log new MACs, otherwise remove
                # exec
            }
            reject
        }
    }

    authenticate {
        Auth-Type Accept {
            ok
        }
    }
}
