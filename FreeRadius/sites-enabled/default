listen {
    type = auth
    ipaddr = *
    port = 1812
}

listen {
    type = acct
    ipaddr = *
    port = 1813
}

server default {
    authorize {
        preprocess
        sql
        
        # Check if MAC exists and is enabled in database
        if ("%{sql:SELECT COUNT(*) FROM clients WHERE mac = '%{Calling-Station-Id}' AND enabled = 1}" == "1") {
            # MAC is registered and enabled - grant full access
            update reply {
                Reply-Message := "Access granted"
            }
            update control {
                Auth-Type := Accept
            }
        }
        elsif ("%{sql:SELECT COUNT(*) FROM clients WHERE mac = '%{Calling-Station-Id}'}" == "1") {
            # MAC exists but not enabled - redirect to waiting page
            update reply {
                Reply-Message := "Registration pending approval"
                WISPr-Redirection-URL := "http://your-portal.com/pending"
            }
            reject
        }
        else {
            # MAC not registered - redirect to registration form
            update reply {
                Reply-Message := "Please register"
                WISPr-Redirection-URL := "http://your-portal.com/register"
            }
            reject
        }
    }

    authenticate {
        Auth-Type Accept {
            ok
        }
    }

    post-auth {
        sql
        
        Post-Auth-Type REJECT {
            sql
            
            # Log rejected attempts
            exec
        }
    }

    accounting {
        sql
    }
}